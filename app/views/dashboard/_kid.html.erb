<li class="list-group-item">
  <div class="d-flex flex-row justify-content-between align-items-center">
    <div class="d-flex flex-row gap-2">
      <span> <%= kid.name %> </span>

      <span> (9 Dias) </span>
    </div>


    <div class="d-flex flex-row gap-2">
      <span>$ 2,00</span>

      <div>
        <%= link_to t('app.show'), kid %>
      </div>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title"><%= t('dashboard.today_chores') %></h5>

      <div class="d-flex flex-row justify-content-between">
        <% kid.chores.each do |chore| %>
          <%= turbo_frame_tag ['kid', kid.id, 'chore', chore.id] do %>
            <%= render 'daily_chores/daily_chore', kid:, chore: %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</li>
