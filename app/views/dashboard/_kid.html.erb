<li class="list-group-item">
  <div class="d-flex flex-row justify-content-between align-items-center">
    <div class="d-flex flex-row gap-2">
      <span> <%= kid.name %> </span>

      <span>
        <% days  = streak_for(kid)[:days] %>
        (<%= days %>
      <%= t('app.streak.days', count: days) %>)
      </span>
    </div>


    <div class="d-flex flex-row gap-2">
      <span>$ 2,00</span>

      <div>
        <%= link_to t('app.details'), kid %>
      </div>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title"><%= t('dashboard.today_chores') %></h5>
      <h6 class="card-subtitle"><%= l(Date.current) %></h6>

      <ul class="list-group">
        <% kid.chores.each do |chore| %>
          <li class="list-group-item">
            <%= render 'daily_chores/daily_chore', kid:, chore: %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</li>
