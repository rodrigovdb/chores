<%= turbo_frame_tag kid do %>
  <li class="list-group-item">
    <div class="d-flex w-100 justify-content-between">
      <div class="kid-list-name"><%= kid.name %></div>

      <div>
        <div class="d-flex justify-content-end">
          <%= link_to edit_kid_path(kid), data: { turbo_frame: kid }, class: 'btn btn-sm btn-outline-dark ms-2' do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= button_to kid, method: :delete, form: { data: { turbo_confirm: t('app.confirm_delete') } }, class: 'btn btn-sm btn-outline-dark ms-2' do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>

    <div>
      <%= turbo_frame_tag(kid, 'chores') do %>
        <% if kid.chores.any? %>
          <div><%= t('app.kids_chores') %></div>
          <ul class="kid-chores-list">
            <%= render kid.kid_chores %>
          </ul>
        <% else %>
          <div><%= t('app.kids_no_chores') %></div>
        <% end %>

        <%= link_to edit_kid_path(kid, section: :chores), data: { turbo_frame: dom_id(kid, 'chores') }, class: 'btn btn-outline-dark mb-3' do %>
          <i class="fa fa-pencil"></i>
          <%= t('app.edit', item: Chore.model_name.human.pluralize) %>
        <% end %>
      <% end %>
    </div>
  </li>
<% end %>
