<div class="card my-2 shaddow-card">
  <div class="card-body">
    <% if title %>
      <h3 class="card-title"><%= title %></h3>
    <% end %>

    <%= form_with(model: chore) do |form| %>
      <% if chore.errors.any? %>
        <%= render 'errors', object: chore %>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, required: 'required', class: 'form-control' %>
      </div>

      <%= form.submit class: 'btn btn-outline-dark' %>
      <%= link_to chores_path, class: 'btn btn-outline-secondary' do %>
        <%= t('app.cancel') %>
      <% end %>
    <% end %>
  </div>
</div>
