

<div class="card my-2">
  <div class="card-body">
    <%= form_with model: daily_chore do |form| %>
      <% if daily_chore.errors.any? %>
        <%= render 'errors', object: daily_chore %>
      <% end %>

      <div class="input-group mb-3">
        <%= form.label :chore, class: 'input-group-text' %>
        <%= form.collection_select :chore_id, Chore.order(:name), :id, :name, { prompt: t('app.select') }, {class: 'form-select'} %>
      </div>

      <div class="input-group mb-3">
        <%= form.label :created_at, class: 'input-group-text' %>

        <%= form.text_field :created_at,
          data: {
            controller: "flatpickr",
            flatpickr_min_date: Date.current.prev_month,
            flatpickr_max_date: Date.current.tomorrow,
          },
          class: 'form-control' %>
      </div>

      <%= button_tag submit: true, class: 'btn btn-outline-dark' do %>
        <%= icon('fa-solid', 'save') %>
        <%= t('app.save') %>
      <% end %>
      <%= link_to root_path, class: 'btn btn-outline-secondary' do %>
        <%= icon('fa-solid', 'times') %>
        <%= t('app.cancel') %>
      <% end %>
    <% end %>
  </div>
</div>
